{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist", // your output directory for transpiled JS files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "client/src/**/*.ts" // adjust this to include all TS files you want to transpile
  ]
}